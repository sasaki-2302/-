<table>
  <thead>
    <tr>
      <th>投稿ユーザー</th>
      <th>投稿タイトル</th>
      <th>投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-group">
  <%= form_with model: @post do |f| %>
    <%= f.text_field :title %><br>
    <%= f.text_area :body %><br>
    <%= f.submit %>
  <% end %>
</div>
